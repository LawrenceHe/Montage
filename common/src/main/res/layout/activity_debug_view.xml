<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:text="开发环境选择："
            android:textSize="18dp" />

        <RadioGroup
            android:id="@+id/radioEnvGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioEnvDev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="dev" />

            <RadioButton
                android:id="@+id/radioEnvSit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="sit" />

            <RadioButton
                android:id="@+id/radioEnvUat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="uat" />

            <RadioButton
                android:id="@+id/radioEnvPrd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="prd" />
        </RadioGroup>

        <Button
            android:id="@+id/testRealmDatabase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试Realm数据库"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/openCertainPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/pageUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Url"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="18dp" />

        </LinearLayout>

        <Button
            android:id="@+id/testWeixinLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调起微信登录"
            android:textSize="18dp" />

    </LinearLayout>

</LinearLayout>