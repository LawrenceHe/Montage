<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="QMUITopBarStyle">@style/ZDTopBar</item>

        <!-- 配置app自己的theme -->
        <item name="app_primary_color">@color/colorPrimary</item>
        <item name="app_content_bg_color">@color/item_default_color</item>

    </style>

    <style name="ZDTopBar" parent="QMUI.TopBar">
        <item name="qmui_topbar_bg_color">?attr/app_primary_color</item>
        <item name="qmui_topbar_title_color">@color/qmui_config_color_white</item>
        <item name="qmui_topbar_subtitle_color">@color/qmui_config_color_white</item>
        <item name="qmui_topbar_text_btn_color_state_list">@color/s_topbar_btn_color</item>
        <item name="qmui_topbar_height">48dp</item>
        <item name="qmui_topbar_image_btn_height">48dp</item>
        <item name="qmui_topbar_separator_height">0px</item>
    </style>

    <style name="IndicateText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#33000000</item>
    </style>

    <style name="CommonEditText">
        <item name="colorControlNormal">@color/item_border_color</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>
